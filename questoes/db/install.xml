<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/questoes/db" VERSION="20210818" COMMENT="XMLDB file for Moodle blocks/questoes"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_questoes" COMMENT="Tabela de questoes">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="questao_nome" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Nome curto"/>
        <FIELD NAME="questao_texto" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Texto questao"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>
